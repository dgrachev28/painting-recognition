<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">


    <changeSet id="1" author="dgrachev28">
        <dropTable tableName="picture"/>
        <rollback changeSetPath="liquibase/2017-04-10-2205-init.xml" changeSetId="2" changeSetAuthor="dgrachev28"/>
    </changeSet>

    <changeSet id="2" author="dgrachev28">
        <dropTable tableName="author"/>
        <rollback changeSetPath="liquibase/2017-04-10-2205-init.xml" changeSetId="1" changeSetAuthor="dgrachev28"/>
    </changeSet>


    <changeSet id="3" author="dgrachev28">
        <createTable tableName="localized_string">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="text_ru" type="text"/>
            <column name="text_en" type="text"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="dgrachev28">
        <createTable tableName="author">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="int">
                <constraints foreignKeyName="fk_loc_author_name" references="localized_string(id)"/>
            </column>
            <column name="description" type="int">
                <constraints foreignKeyName="fk_loc_author_description" references="localized_string(id)"/>
            </column>
            <column name="life_years" type="int">
                <constraints foreignKeyName="fk_loc_author_years" references="localized_string(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="dgrachev28">
        <createTable tableName="picture">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="int">
                <constraints foreignKeyName="fk_loc_picture_title" references="localized_string(id)"/>
            </column>
            <column name="description" type="int">
                <constraints foreignKeyName="fk_loc_picture_description" references="localized_string(id)"/>
            </column>
            <column name="year" type="int">
                <constraints foreignKeyName="fk_loc_picture_year" references="localized_string(id)"/>
            </column>
            <column name="short_info" type="int">
                <constraints foreignKeyName="fk_loc_picture_short_info" references="localized_string(id)"/>
            </column>
            <column name="gallery" type="int">
                <constraints foreignKeyName="fk_loc_picture_gallery" references="localized_string(id)"/>
            </column>
            <column name="image_path" type="text"/>
            <column name="author_id" type="int">
                <constraints foreignKeyName="fk_picture_author" references="author(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="dgrachev28">
        <createIndex tableName="localized_string" indexName="idx_localized_string">
            <column name="text_ru"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>